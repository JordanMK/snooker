{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/src/*": ["./src/*"],
      "@/components/*": ["components/*"],
      "@/styles/*": ["src/styles/*"]
    },
    "strictNullChecks": true
  },
  "include": [
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
